{
	"template": "default",
	"routes"    :   {
		"(signup|login|logout|recovery)"    :	{
			"controller"    :	"Auth_Controller",
			"method"        :	"$1",
			"arguments"     :	[]
		},
		"mail/({A-z}+)"     :	{
			"controller"    :	"Mail_Controller",
			"method"        :	"$1",
			"arguments"     :	[]
		},
		"(.*)"    :	{
			"controller"    :	"Main_Controller",
			"method"        :	"direct",
			"arguments"     :   {
				"path"      :   "$1"
			}
		},
		""    :	{
			"controller"    :	"Index_Controller",
			"method"        :	null,
			"arguments"     :	[]
		}
	}
}